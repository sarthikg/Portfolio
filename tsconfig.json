{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@component/*": ["src/components/*"],
      "@layout/*": ["src/layouts/*"],
      "@page/*": ["src/page/*"],
      "@style/*": ["src/styles/*"],
      "@asset/*": ["src/assets/*"],
      "@schema/*": ["src/schemas/*"],
      "@content/*": ["src/content/*"],
      "@facade/*": ["src/facades/*"],
      "@util/*": ["src/utils/*"]
    }
  }
}
