---
import Layout from "@layout/layout/Layout.astro";
import "@style/pages/contact.css";
---

<Layout title="Contact // Sarthik Gupta">
  <main class="main main--contact">
    <h1 class="contact__heading">Connect. Enquire. Follow.</h1>
    <p class="contact__heading__description">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Delectus aperiam
      corrupti facere illo labore dolorem minima voluptas, expedita sit dolore
      dolor nostrum tempora doloribus!
    </p>
    <section class="contact__form__section">
      <form class="contact__form" method="post" action="/api/contact">
        <input
          class="contact__input"
          name="name"
          placeholder="Name"
          type="text"
          required
        />
        <input
          class="contact__input"
          name="email"
          placeholder="Email"
          type="email"
          required
        />
        <input
          class="contact__input"
          name="subject"
          placeholder="Subject"
          type="text"
          required
        />
        <textarea
          class="contact__input contact__input--textarea"
          name="message"
          placeholder="Message"></textarea>
        <button class="contact__input contact__input--submit" type="submit"
          >Send</button
        >
      </form>
    </section>
  </main>
</Layout>
