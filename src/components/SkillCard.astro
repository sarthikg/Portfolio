---
import Svg from "./Svg.astro";

interface Props {
  name: string;
  description: string;
  url: string;
  iconName: string;
}

const { name, description, url, iconName } = Astro.props;
---

<a class="skill-card" href={url} target="_blank">
  <div class="skill-card__icon">
    <Svg alt={name} name={iconName} size={48} />
  </div>
  <h1 class="skill-card__title">{name}</h1>
  <h2 class="skill-card__description">{description}</h2>
</a>

<style>
  /* Global Styles */
  .skill-card {
    flex: 1;
    display: grid;
    grid-template-columns: 48px 1fr;
    column-gap: 20px;
    cursor: pointer;
    padding: var(--space-s);
    border-radius: var(--radius-md);
    background-color: transparent;
    text-decoration: unset;
    transition:
      background-color var(--transition-ease-slow),
      color var(--transition-ease-slow);
    min-width: 300px;
    color: var(--grey-300);
    &:hover {
      color: var(--grey-500);
      background-color: var(--grey-900);
    }
    &__icon {
      display: flex;
      align-items: center;
      justify-content: center;
      grid-row: 1 / 3;
      grid-column: 1 / 2;
      height: 48px;
    }
    &__title {
      grid-row: 1 / 2;
      grid-column: 2 / 3;
      color: var(--grey-300);
      font-size: var(--fs-base);
      font-weight: 500;
      line-height: var(--lh-1-4);
    }
    &__description {
      grid-row: 2 / 3;
      grid-column: 2 / 3;
      color: var(--grey-500);
      font-size: var(--fs-sm);
      text-overflow: ellipsis;
      overflow: hidden;
      line-height: 2;
    }
  }
</style>
